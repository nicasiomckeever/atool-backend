# Main Supabase Configuration (for users, auth, job status)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key-here

# Edge Function Configuration (for routing queue operations)
# This is the deployed edge function URL that routes to worker projects
EDGE_FUNCTION_URL=https://your-project.supabase.co/functions/v1/route-queue

# Worker Supabase Projects (for queue tables only)
# These are set as secrets in Supabase Edge Functions, not in your backend
# They're listed here for documentation purposes only

# Worker 1 Configuration
WORKER_1_URL=https://worker1-project.supabase.co
WORKER_1_ANON_KEY=worker1-anon-key-here

# Worker 2 Configuration
WORKER_2_URL=https://worker2-project.supabase.co
WORKER_2_ANON_KEY=worker2-anon-key-here

# Worker 3 Configuration (optional - for extra capacity)
WORKER_3_URL=https://worker3-project.supabase.co
WORKER_3_ANON_KEY=worker3-anon-key-here

# Cloudinary Configuration (for image storage)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Modal Configuration (for AI generation)
MODAL_API_URL=https://your-modal-endpoint.modal.run

# Discord Webhook (for notifications)
DISCORD_WEBHOOK=https://discord.com/api/webhooks/your-webhook

# Application Settings
FLASK_ENV=development
PORT=5000
DEBUG=True

# Telegram Bot Configuration (for Monetag postback messages)
# Get these values from Telegram BotFather and your chat
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
TELEGRAM_SECRET=your_secret_for_validation_here

# Feature Flags
USE_EDGE_FUNCTION=true  # Set to true to use edge function routing, false to use direct Supabase

# MoneyTag Ad Network Configuration
MONETAG_API_TOKEN=your_monetag_api_token_here
MONETAG_ZONE_ID=10305830
MONETAG_PUBLISHER_ID=your_publisher_id_here
